        <div class="content-body">
            <!-- row -->
            <div class="container-fluid">
                
                <div class="row">

                        <div class="col-xl-12 col-lg-12">
                        <div class="card">
                            <div class="card-header">
                               <h3 class="text-black font-w600 mb-0">View Report</h3>
                            </div>
                            <div class="card-body">
                                <div class="basic-form">

                            <div class="table-responsive">
                               <div class="demo-html"></div>
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                           
                                                <th style="width: 2%;">S/N</th>
                                                <th>Reporter </th>
                                                <th>Reporter Email</th>
                                                <th>Scammer Data</th>
                                                <th>Description</th>
                                                <th>Status</th>
                                                <th>Victim</th>
                                                <th>Date</th>
                                                <th>Proof</th>
                                                <th>Action</th>
                                                <th>Action</th>
                                                <th>Action</th>
                                        </thead>
                                        <tbody>
                                            <% var i = 1; %>
                                            <% var ix = 0; %>
                                            <% if(result.size>0) { %>
                                                <% result.forEach(function(value, key) { %>
                                                    <tr>
                                                    <td style="width: 2%;text-align: center;"><%= i++; %></td>
                                                    <td><%= value.data.sname %></td>
                                                    <td><%= value.data.email %></td>
                                                    <td>
                                                        <% var sdata = "x"; %>
                                                        <% if(value.data.stype=="Email"){ sdata = value.data.smail; }else if(value.data.stype=="Website"){ sdata = value.data.website; }else{ sdata = value.data.gsm;} %>
                                                        <%= sdata %>
                                                        <br>
                                                        <span style="text-align: left;" class="label label-success"><%= value.data.stype %></span>
                                                    </td>
                                                    <td>
                                                        <% var desc = "x"; %>
                                                        <% if(value.data.desc==""){ desc = "NIL"; }else{ desc = value.data.desc;} %>
                                                        <%= desc %>
                                                    </td>
                                                    <td>
                                                        <% if(value.data.status=="NV"){ 
                                                            %>
                                                            <span style='color:red;'>Not Verified</span>
                                                            <%
                                                            }else if(value.data.status=="REJECTED"){ 
                                                                %>
                                                                <span style='color:orangered;'>Disapproved</span>
                                                                <%
                                                            }else{ 
                                                                %>
                                                                <span style='color:green;'>Verified</span>
                                                                <%
                                                            } %>
                                                    </td>
                                                    <td>
                                                        <% if(value.data.svic=="Yes"){ 
                                                            %>
                                                            <span style='color:red;'>Yes</span>
                                                            <%
                                                            }else{ 
                                                                %>
                                                                <span style='color:orange;'>No</span>
                                                                <%
                                                            } %>
                                                    </td>
                                                    <td><%= 
                                                        value.data.created.toDate().toDateString() 
                                                        %></td>
                                                    <td>
                                                        <% imageArray = value.data.image;  %>
                                                        <% 
                                                       for(var index=0; index<imageArray.length; index++){ 
                                                            %>
                                                            <a href="<%= imageArray[index] %>" target="_blank">Proof <%= index %></a>
                                                            <br>
                                                        <% } %>

                                                    </td>
                                                    <td>
                                                      <a href="view-report/approve/?id=<%= value.id %>&email=<%= value.data.email %>" class="btn btn-success btn-sm delete" style="padding: 5px !important;color: #fff;cursor: pointer;"><span class="bi bi-trash"></span> Approve </a>
                                                    </td>
                                                    <td>
                                                      <a href="view-report/disapprove/?id=<%= value.id %>&email=<%= value.data.email %>" class="btn btn-warning btn-sm delete" style="padding: 5px !important;color: #fff;cursor: pointer;"><span class="bi bi-trash"></span> Disapprove </a>
                                                    </td>
                                                    <td>
                                                      <a class="delete" href="view-report/delete/?id=<%= value.id %>" ><button class="btn btn-danger btn-sm " style="padding: 5px !important;color: #fff;cursor: pointer;"><span class="bi bi-trash"></span> Delete </button></a>
                                                    </td>
                                                </tr>
                                                <% })%>
                                                <% }else { %>
                                                  <p>No Records to Display</p>
                                                  <% } %>
                                            
                                        </tbody>
                                    </table>
